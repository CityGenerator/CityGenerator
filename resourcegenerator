#!/usr/bin/perl -wT

use strict;
use warnings;
use CGI;
use Data::Dumper;
use JSON;
use List::Util 'shuffle', 'min', 'max' ;
use POSIX;
use Template;
use XML::Simple;
use lib "lib/";
use GenericGenerator;
use ResourceGenerator;
our $q = CGI->new;


my $seed=GenericGenerator::set_seed();

if (defined $q->param('seed')){
    $seed=$q->param('seed');
}

my $resources;

for(my $i=0; $i<10 ; $i++){
    push @$resources, ResourceGenerator::create({seed=>($seed+$i)   });
}


if (defined $q->param('type') and $q->param('type') eq 'xml' ){
    print $q->header( 'text/xml' );
    print "<?xml version='1.0'  encoding='utf-8' ?>\n";
    print XMLout($resources);

} elsif (defined $q->param('type') and $q->param('type') eq 'json' ){
    print $q->header( 'application/json' );
    my $JSON  = JSON->new->utf8;
    $JSON->convert_blessed(1);
    print $JSON->encode($resources);

} elsif (defined $q->param('type') and $q->param('type') eq 'dump' ){
    print $q->header( 'text/plain' );
    print Dumper $resources;

} else {
    print $q->header( 'text/html; charset=utf-8' );
    print_page($resources);
}

exit;

#################################################################################################
#################################################################################################
#################################################################################################

sub print_page {
    my ($resources)=@_;

    my $templates = Template->new({
        INCLUDE_PATH => 'Templates/',
        INTERPOLATE  => 1,
    }) || die "$Template::ERROR\n";

    my $vars = {
        'title'         => 'Nearby Resources ('.$resources->[0]->{'seed'}.")",

        'content'       => print_content($resources),
    };
    return $templates->process('base.tmpl', $vars) || die $templates->error(), "\n";
}


sub print_content {
    my ($resources)=@_;

    my $templates = Template->new({
        INCLUDE_PATH => 'Templates/',
        INTERPOLATE  => 1,
    }) || die "$Template::ERROR\n";

    my $formtmpl;
    my $vars = {
        'items'   => $resources,
        'section'       => 'resources',
        'sectionname'   => 'Resources',
        'sectionintro'  => "You find the following resources:",
    };
    $templates->process('sharedgenerator_content.tmpl', $vars, \$formtmpl) || die $templates->error(), "\n";

    return $formtmpl;
}

__END__


